Prints number of days in a given month.

*/

#include <iostream>

using namespace std;


int main() 

{

  // initialize variables

  int year;

  int month;


  // take in month and year from user

  cout << "Enter year: ";

  cin >> year;

  cout << "Enter month: ";

  cin >> month;

  cout << endl;


  // print out the corresponding number of days for each month. If the month is february,

  // check if the year is a leap year, then print out either 28 if its not a leap year

  // or 29 if it is.

  if (month == 1)

    cout << 31;

  if (month == 2)

  {

    if (year % 4 != 0)

      cout << 28;

    else if (year % 100 != 0)

      cout << 29;

    else if (year % 400 != 0)

      cout << 28;

    else

      cout << 29;

  }

  if (month == 3)

    cout << 31;

  if (month == 4)

    cout << 30;

  if (month == 5)

    cout << 31;

  if (month == 6)

    cout << 30;

  if (month == 7)

    cout << 31;

  if (month == 8)

    cout << 31;

  if (month == 9)

    cout << 30;

  if (month == 10)

    cout << 31;

  if (month == 11)

    cout << 30;

  if (month == 12)

    cout << 31;


  cout << " days";

  return 0;

}

