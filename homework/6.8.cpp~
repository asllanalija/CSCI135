#include <iostream>

void selectionSort(int a[], int a_size)
{
   int i, j, min, temp;
   for (i = 0; i < a_size - 1; i++)
   {
      min = i;
      for (j = i + 1; j < a_size; j++)
         if (a[j] < a[min])
            min = j;
      temp = a[i];
      a[i] = a[min];
      a[min] = temp;
   }
}

bool same_set(int a[], int a_size, int b[], int b_size)
{
    if (a_size != b_size)
        return false;

    selectionSort(a, a_size);
    selectionSort(b, b_size);

    for (int i = 0; i < a_size; i++)
        if (a[i] != b[i])
            return false;
}
