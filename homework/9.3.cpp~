#include <iostream>

class LightSwitch
{
  public:
    int up;
    LightSwitch()
    {
        up = 0;
    }
};

class Circuit
{
  public:
    int on;
    LightSwitch * first;
    LightSwitch * second;
    
    int get_first_switch_state(){return first->up} // 0 for down, 1 for up
    int get_second_switch_state(){return second->up};
    int get_lamp_state(){return on}; // 0 for off, 1 for on
    void toggle_first_switch()
    {
        if (first->up == 1)
            first->up = 0;
        else
            first->up = 1;
    }
    void toggle_second_switch()
    {
        if (first->up == 1)
            first->up = 0;
        else
             first->up = 1;
    }
    Circuit()
    {
        LightSwitch first;
        LightSwitch second;
        this.first = first;
        this.second = second;
    }

};

int main()
{
    LightSwitch first = {0};
    LightSwitch second = {0};
}
