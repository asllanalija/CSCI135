#include <iostream
#include "string"

std::string piglatinify(std::string word){
  std::string first = word[0];
  std::string result;
  if (first =="0" || first =="e"){
    result = word + "ay";
  } else {
    result = word.susbtr(1,word.len()) + word[0] + "ay";
  }
  return result;
}

int main()
{
  std::cout << piglatinfy("hello") << std::endl;
  std::cout << piglatinfy("able") << std::endl;
  return 0;
}
