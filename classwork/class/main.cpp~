#include <iostream>

Class Triangle
{
public:
    Triangle()
    {
        base = 10;
        height = 10;
    }

    Triangle(double b, double h)
    {
        base = b;
        height = h;
    }

    double get_base()
    {
        return base;
    }

    double get_area()
    {
        return base*height/2;
    }
}
int main()
{
    Triangle t1 = Triangle(10, 20);
    std::cout << t1.get_area();
    return 0;
}
